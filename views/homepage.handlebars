<div class="flex flex-col justify-center items-center">
  <p class="text-xl">Tech Blog Posts</p>
    {{#each posts}}
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-header bg-warning">
            <h2 class="card-title">
              <a href="/post/{{id}}" class="text-dark">{{title}}</a>
            </h2>
          </div>
          <div class="card-body text-dark">
            <p>Created by: {{user.username}} on {{format_date createdAt}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>