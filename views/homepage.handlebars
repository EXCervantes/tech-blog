<div class="flex flex-col justify-center items-center">
  <p class="text-4xl font-bold mb-5">Tech Blog Posts</p>
    {{#each posts}}
      <div class="text-lg container mx-auto">
        <div class="card mb-5">
          <div class="card-header bg-warning">
            <h2>
              <a href="/post/{{id}}" class="text-white text-2xl">{{post_title}}</a>
            </h2>
          </div>
          <div class="text-m py-4 px-2">
            <p>{{post_body}}</p>
          </div>
          <div class="card-body bg-blue-300">
            <p>Created by: {{user.username}} on {{format_date date_created}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>